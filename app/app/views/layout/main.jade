doctype html
html(ng-app="cinematrope", ng-cloak)
    head
        meta(charset="utf-8")
        block title
            title Cinematrope
        meta(http-equiv="content-type", content="text/html; charset=utf-8")
        meta(name="description", content="Discover the movie that you missed")
        meta(name="keywords", content="MOvie, find, discover, zoetrope, cinematrope")
        meta(name="viewport", content="width=device-width, user-scalable=no")
        block meta

        link(href='http://fonts.googleapis.com/css?family=Comfortaa:400,700|Open+Sans:400,700', rel='stylesheet', type='text/css')
        link(href='styles/main.css', rel='stylesheet', type='text/css')
        block styles

    body
        block content

    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    script(type="text/javascript", src="scripts/scripts.js")
    block scripts
